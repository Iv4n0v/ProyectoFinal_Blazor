@page "/Productos"

<h3>Lista de Productos</h3>

<div class"form-group row">
    <div class="col-sm-2">
        <a href="/Productos/Nuevo" class="btn btn-primary">Nuevo Producto</a>
    </div>
</div>

@if (productoLista == null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Existencia</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in productoLista)
            {
                <tr>
                    <td>@producto.Codigo</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio</td>
                    <td>@producto.Existencia</td>                 
                    <td>
                        <a class="btn btn-success" href="@($"/Productos/Editar/{producto.Codigo}")">Editar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}

