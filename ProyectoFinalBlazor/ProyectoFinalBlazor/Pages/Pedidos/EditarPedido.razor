@page "/Pedidos/Editar/{Codigo}"

<EditForm Model="@pedido">
    <DataAnnotationsValidator />
    <h3>Editar Pedido</h3>
    <hr />

    <div class="form-group row">
        <label for="Codigo" class="col-sm-2 col-form-label">
            Código
        </label>
        <div class="col-sm-10">
            <InputText id="Codigo" class="form-control" placeholder="Código" @bind-Value="pedido.Codigo" />
            <ValidationMessage For="@(() => pedido.Codigo)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Cliente" class="col-sm-2 col-form-label">
            Cliente
        </label>
        <div class="col-sm-10">
            <InputText id="Cliente" class="form-control" placeholder="Cliente" @bind-Value="pedido.Cliente" />
            <ValidationMessage For="@(() => pedido.Cliente)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Total" class="col-sm-2 col-form-label">
            Total
        </label>
        <div class="col-sm-10">
            <InputNumber id="Total" class="form-control" placeholder="Total" @bind-Value="pedido.Total"/>
            <ValidationMessage For="@(() => pedido.Total)" />
        </div>
    </div>

     <div class="form-group row">
        <label for="IdProducto" class="col-sm-2 col-form-label">
            IdProducto
        </label>
        <div class="col-sm-10">
            <InputText id="IdProducto" class="form-control" placeholder="IdProducto" @bind-Value="pedido.IdProducto"/>
            <ValidationMessage For="@(() => pedido.IdProducto)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="Cantidad" class="col-sm-2 col-form-label">
            Cantidad
        </label>
        <div class="col-sm-10">
            <InputNumber id="Cantidad" class="form-control" placeholder="Cantidad" @bind-Value="pedido.Cantidad"/>
            <ValidationMessage For="@(() => pedido.Cantidad)" />
        </div>
    </div>
   

    <div class="form-group row">
        <p>
            <input type="submit" class="btn-toolbar btn-primary" value="Guardar" @onclick="Guardar" />
            <input type="submit" class="btn-toolbar btn-danger" value="Cancelar" @onclick="Cancelar" />
            <input type="submit" class="btn-toolbar btn-warning" value="Eliminar" @onclick="Eliminar" />
        </p>
    </div>


</EditForm>